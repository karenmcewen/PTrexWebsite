<!--CAROUSEL w/ 3 quotes also in seeded reviews ------------------------------------------------------------->

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>

    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/0a_Landing.jpg" alt="landing page" />
            <div class="carousel-caption">
                <h3>Landing Page</h3>
                <p></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/0b_Dashboard.jpg" alt="Dashboard" />
            <div class="carousel-caption">
                <h3>Dashboard</h3>
                <p></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/0c_MyR(e)x_Plan.jpg" alt="Plan" />
            <div class="carousel-caption">
                <h3>MyRex Plan</h3>
                <p>Tracks your prescribed exercises regime.</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/0d_Add_Plan_Exercise_1.jpg" alt="Add Plan" />
            <div class="carousel-caption">
                <h3>MyRex Plan - Add</h3>
                <p>You or your physical therapist can enter a new exercise.</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/0e_exercise_reference_table.jpg" alt="Exercises" />
            <div class="carousel-caption">
                <h3>Exercise Database</h3>
                <p>Database contains links to videos and instructions.</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/0f_MyR(e)x_2.jpg" alt="Time to workout!" />
            <div class="carousel-caption">
                <h3>Time to workout!</h3>
                <p>Choose an exercise from your plan and enter your actual workout.</p>
            </div>
        </div>

        <div class="item">            
            <img src="~/Images/0g_MyR(e)x_workouts.jpg" alt="progress"/>
            <div class="carousel-caption">
                <h3>Track your progress</h3>
                <p>All your workouts in one place.</p>
            </div>
        </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

